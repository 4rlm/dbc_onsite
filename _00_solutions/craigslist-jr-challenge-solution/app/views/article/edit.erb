<form action="/category/<%= @article.category_id %>/article/<%= @article.id %>/edit" method="post">
  <input type="hidden" name="_method" value="put">
  <input type="hidden" name="article[category_id]" value="<%= @article.category_id %>">
  <input type="hidden" name="article[id]" value="<%= @article.id %>">
  Title: <input type="text" name="article[title]" value="<%= @article.title %>"><br>
  Description: <input type="text" name="article[description]" value="<%= @article.description %>"><br>
  Price: $<input type="text" name="article[price]" value="<%= @article.price %>"><br>
  Author: <input type="text" name="article[author]" value="<%= @article.author %>"><br>
  Email: <input type="text" name="article[email]" value="<%= @article.email %>"><br>
  <input type="submit" value="Submit Changes">
</form>