<h2>Login</h2>
<form action="/login" method="post">
    <input type="text" name="user[name]" placeholder="Name">
    <input type="password" name="user[password]" placeholder="Password">
    <input type='submit' value="login">
</form>

<% if @errors %>
    <p style="color: red"><%= @errors %></p>
<% end %>