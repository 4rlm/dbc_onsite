<h3 class="text-center">Recently Submitted Colors & Shapes</h3>

<table class="table table-bordered table-hover text-center sub-section-table">
  <tr>
    <th>ID</th>
    <th>Color</th>
    <th>Shape</th>
    <th>Updated</th>
    <th>Created</th>
  </tr>
  <% @colors.each do |color| %>
  <tr>
    <td><%= color.id %></td>
    <td><%= color.name %></td>
    <td><%= color.shape %></td>
    <td><%= color.created_at %></td>
    <td><%= color.updated_at %></td>
  </tr>
  <% end %>
</table>

