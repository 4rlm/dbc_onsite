<div class="form-group">
  <label for="first_name" class="col-sm-2 control-label">First Name</label>
  <div class="col-sm-10">
    <input class="form-control" id="first_name" name="contact[first_name]" type="text" value="<%= @contact.first_name %>" placeholder="first name" />
  </div>
</div>

<div class="form-group">
  <label for="last_name" class="col-sm-2 control-label">Last Name</label>
  <div class="col-sm-10">
    <input class="form-control" id="last_name" name="contact[last_name]" type="text" value="<%= @contact.last_name %>" placeholder="last name" />
  </div>
</div>

<div class="form-group">
  <label for="email" class="col-sm-2 control-label">Email</label>
  <div class="col-sm-10">
    <input class="form-control" id="email" name="contact[email]" type="text" value="<%= @contact.email %>" placeholder="email name" />
  </div>
</div>
