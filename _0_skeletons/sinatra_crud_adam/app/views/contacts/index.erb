<div class="">

  <div class="erb_header">
    <h2>Exclusive Members</h2>
    <h4>Search for members.  You may also view details, edit, and delete.</h4>
  </div>

  <table class="table table-bordered table-hover table-striped">
    <tr>
      <th><span class="glyphicon glyphicon-user"></span></th>
      <th>First Name</th>
      <th>Last Name</th>
      <th><span class="glyphicon glyphicon-envelope"></span></th>
      <th colspan="3"><span class="glyphicon glyphicon-cog"></span> Manage</th>
    </tr>
    <!-- # Step 1/3 for will_paginate: create instance variable in controller. -->
    <!-- # Step 2/3 for will_paginate: below -->
    <% @wp_contacts.each do |contact| %>
    <tr>
      <td><%= contact.id %></td>
      <td><%= contact.first_name %></td>
      <td><%= contact.last_name %></td>
      <td><%= contact.email %></td>

      <td>
        <button class="btn btn-default" name="commit" type="submit"><a href="/contacts/<%= contact.id %>">
          <span class="glyphicon glyphicon-folder-open"></span>
        </a></button>
      </td>

      <td>
        <button class="btn btn-default" name="commit" type="submit"><a href="/contacts/<%= contact.id %>/edit">
          <span class="glyphicon glyphicon-edit"></span>
        </a></button>
      </td>

      <td><%= erb :'contacts/_delete', layout: true, locals: { contact: contact }%></td>
    </tr>
    <% end %>
  </table>

  <!-- # Step 3/3 for will_paginate: below -->
  <%= will_paginate @wp_contacts %>

</div>
