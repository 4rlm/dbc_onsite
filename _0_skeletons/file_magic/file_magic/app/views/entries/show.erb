<div class="">

  <div class="erb_header">
    <h2>Show Entry</h2>
  </div>


  <table class="table table-bordered table-hover table-striped">
    <tr>
      <th class="w-small">ID</th>
      <th class="w-small">Author</th>
      <th class="w-small">Posted/Updated</th>
    </tr>

    <tr>
      <td><%= @entry.id %></td>
      <td><%= @entry.author %></td>
      <td><%= @entry.updated_at %></td>
    </tr>

    <tr>
      <th colspan="3" class="w-small">Title</th>
    </tr>
    <tr>
      <td colspan="3" ><%= @entry.title %></td>
    </tr>
    <tr>
      <td colspan="3"><%= @entry.body %></td>
    </tr>
    <tr>
      <td colspan="3">
        <%= @entry.tags.map(&:name).join(', ') %>
      </td>
    </tr>

  </table>

</div>
