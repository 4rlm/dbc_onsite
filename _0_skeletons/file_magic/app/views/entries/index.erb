<h1>On INDEX - Entries ERB</h1>

<table class="table table-bordered table-striped table-hover">
  <tr>
    <th>ID</th>
    <th>Author</th>
    <th>Title</th>
    <th>Created</th>
    <th colspan="3">Manage</th>
  </tr>
  <% @entries.each do |entry|%>
  <tr>
    <td><%= entry.id%></td>
    <td><%= entry.author%></td>
    <td><%= entry.title%></td>
    <td><%= entry.updated_at%></td>

    <td>
      <button class="btn btn-default" name="commit" type="submit"><a href="/entries/<%= entry.id %>">
        <span class="glyphicon glyphicon-folder-open"></span>
      </a></button>
    </td>

    <td>
      <button class="btn btn-default" name="commit" type="submit"><a href="/entries/<%= entry.id %>/edit">
        <span class="glyphicon glyphicon-edit"></span>
      </a></button>
    </td>

    <td><%= erb :'entries/_delete', layout: true, locals: { entry: entry }%></td>

  </tr>
  <% end %>
</table>


<div class="digg_pagination">
  <%= will_paginate @entries, renderer: BootstrapPagination::Sinatra %>
  <!-- <%= will_paginate @entries %> -->
</div>
